<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/word"
        android:layout_width="230dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textIsSelectable="true"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/word"
        android:hint="Word" />

    <TextView
        android:id="@+id/seemeningid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See meaning"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="#15257A"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/meaning"
        android:layout_width="230dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/meaning"
        android:hint="Meaning" />

    <EditText
        android:id="@+id/explanation"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/explanation"
        android:hint="Example Here"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

</LinearLayout>